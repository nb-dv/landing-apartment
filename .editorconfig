# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{css,scss,js}]
insert_final_newline = true

# не переформатируем минифицированные JS и CSS.
[*.min.*]
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = false
